<p id="notice"><%= notice %></p>

<h1>Listing Tuition Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tuition_statuses.each do |tuition_status| %>
      <tr>
        <td><%= tuition_status.id %></td>
        <td><%= tuition_status.status %></td>
        <td><%= link_to 'Show', tuition_status %></td>
        <td><%= link_to 'Edit', edit_tuition_status_path(tuition_status) %></td>
        <td><%= link_to 'Destroy', tuition_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

