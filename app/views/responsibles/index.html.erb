<h1>Listing Responsibles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Student</th>
      <th>Occupation</th>
      <th>Mobile number</th>
      <th>Residencial number</th>
      <th>Comercial number</th>
      <th>Relation type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responsibles.each do |responsible| %>
      <tr>
        <td><%= responsible.name %></td>
        <td><%= responsible.student_id %></td>
        <td><%= responsible.occupation %></td>
        <td><%= responsible.mobile_number %></td>
        <td><%= responsible.residencial_number %></td>
        <td><%= responsible.comercial_number %></td>
        <td><%= responsible.relation_type %></td>
        <td><%= link_to 'Show', responsible %></td>
        <td><%= link_to 'Edit', edit_responsible_path(responsible) %></td>
        <td><%= link_to 'Destroy', responsible, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

