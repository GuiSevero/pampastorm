<p id="notice"><%= notice %></p>

<h1>Listing Tuitions</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Due date</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tuitions.each do |tuition| %>
      <tr>
        <td><%= tuition.customer_id %></td>
        <td><%= tuition.due_date %></td>
        <td><%= tuition.status %></td>
        <td><%= link_to 'Show', tuition %></td>
        <td><%= link_to 'Edit', edit_tuition_path(tuition) %></td>
        <td><%= link_to 'Destroy', tuition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

